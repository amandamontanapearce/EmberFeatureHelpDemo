{{nav-bar currentUser=currentUser}}
<div class="container-fluid">
<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Upcoming Courses</h1>
  </div>
<div class="panel-body">
<table class="table table-hover table-responsive">
  <thead>
  <tr>
    <th>Course</th>
    <th>Course Dates</th>
    <th>Course Status</th>
    <th>Registration</th>
    <th>Registration Status</th>
  </tr>
  </thead>
<tbody>
{{#each userCourses as |course|}}
  <tr>
    <th>{{course.name}}</th>
    <th>
      <ul>
        {{#each course.courseDates as |date|}}
          <li>{{date}}</li>
        {{/each}}
      </ul>
    </th>
  {{#if course.isAcceptingRegistrations}}
      <th>open</th>
      <th>
        <a>apply here</a>
        <small>(non-working link for demo)</small>
      </th>
    <th>{{course.RegistrationStatus}}</th>
  {{else}}
    <th>closed</th>
    <th>cannot apply at this time</th>
    <th>{{course.RegistrationStatus}}</th>
  {{/if}}
</tr>
{{/each}}
</tbody>
</table>
</div>
</div>
</div>

